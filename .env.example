# ================================
# Sri Kanakadurga Nursery - Environment Variables
# ================================
# Copy this file to .env and fill in your values
# For Vercel deployment, add these in the Vercel Dashboard > Settings > Environment Variables

# ================================
# Firebase Configuration (Client-side - VITE_ prefix required)
# ================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ================================
# ImageKit Configuration (Client-side - VITE_ prefix required)
# ================================
VITE_IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
VITE_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# ================================
# ImageKit Configuration (Server-side - for API routes)
# ================================
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key

# ================================
# Session Configuration (Server-side)
# ================================
SESSION_SECRET=your_random_session_secret_key

# ================================
# Server Configuration
# ================================
PORT=5000
NODE_ENV=development


# ================================
# VERCEL ENVIRONMENT VARIABLES SETUP
# ================================
# Add all the above variables (without comments) to your Vercel project:
# 1. Go to your Vercel Dashboard
# 2. Select your project
# 3. Go to Settings > Environment Variables
# 4. Add each variable for Production, Preview, and Development environments
#
# Required for production:
# - All VITE_FIREBASE_* variables
# - All VITE_IMAGEKIT_* variables
# - IMAGEKIT_PUBLIC_KEY
# - IMAGEKIT_PRIVATE_KEY
